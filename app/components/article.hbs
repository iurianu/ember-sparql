<article 
    class="container my-2 py-3" itemscope="itemscope"
    itemtype="http://data.europa.eu/eli/ontology#LegalExpression" 
    about={{@article.article.value}}
>
    <h6 class="title text-secondary" itemprop="label">
        Decreet {{@article.title.value}}
    </h6>
    <blockquote class="row justify-content-between align-items-center">
        <section 
            class="mb-1 mb-md-2" 
            itemprop="is_realized_by" itemscope="itemscope"
            itemtype="http://data.europa.eu/eli/ontology#LegalResource"
            >
            Url: 
            <a  href={{@article.published.value}} target="_blank"                                  
                itemprop="http://purl.org/dc/terms/source" 
            >   
                {{@article.published.value}}
            </a>
        </section>

        <section class="mb-1 mb-md-2 publication-date">
            Date published:
            <time 
                itemprop="date_publication" 
                datetime={{@article.date.value}} 
                class="d-inline text-success"
                >
                {{@article.date.value}}
            </time>
        </section>    
            
        <cite 
            class="mb-1 mb-md-2"
            itemprop="amends" itemscope="itemscope"
            itemtype="http://data.europa.eu/eli/ontology#LegalResource">
            Amends:        
            <a  class="view-modal" title="Click for details!"
                itemprop="http://purl.org/dc/terms/source"
                href={{@article.article.value}}
                data-id={{@article.itemid.value}} 
                data-pub={{@article.date.value}}
                data-bs-toggle="modal" 
                data-bs-target="#detailsModal"                  
            >
                {{@article.article.value}}
            </a>
        </cite>
    </blockquote>
</article>